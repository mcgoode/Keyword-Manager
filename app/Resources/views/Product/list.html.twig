{% extends "base.html.twig" %}

{% block title %}Products{% endblock %}

{% block head %}
    {{ parent() }}


{% endblock %}

{% block mainContent %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Products</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <button type="button" class="btn btn-sm btn-outline-success">Add Product</button>
                <button type="button" class="btn btn-sm btn-outline-secondary disabled">Export</button>
            </div>
        </div>
    </div>


    <div class="table-responsive ">
        <table class="table table-striped table-sm" id="product-table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Client</th>
                <th>Created</th>
                <th>Created By</th>
                <th>Removed</th>
                <th>Removed On</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Deep Dish</td>
                <td>Pizza Hut</td>
                <td>admin</td>
                <td>1/1/2001</td>
                <td></td>
                <td></td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}


{% block javascripts %}
    <script>
        $('#product-table').DataTable();
    </script>
{% endblock %}